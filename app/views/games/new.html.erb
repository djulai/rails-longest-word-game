<h1> New game </h1>

<ul>
  <% @letters.each do |letter|%>
  <li class="letter"><%=letter%></li>
  <%end%>
</ul>

<div class="form-group">
 <form action= "/score" method="POST" data-turbo = "false">
 <label for="type your question here">What is the longest word you can find? </label>
  <div class="input-group mb-3">
   <input type="text" name="games" class="form-control" placeholder="type your answer here" aria-label="answer" aria-describedby="basic-addon2">
    <div class="input-group-append">
    <button input type="submit" class="btn btn-primary btn-outline-secondary" type="button">Play!</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', '@letters'%>
  </div>
 </form>
</div>
